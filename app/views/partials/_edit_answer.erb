<%=  erb :'/partials/_errors' %>

<form class="edit-answer-form" action="/questions/<%= @question.id%>/answers/<%= @answer.id%>" method="post">
  <input type="hidden" name="_method" value="put">
  <label for="edit_answer">Edit Answer</label>
  <input type="text" name="answer[answer]" value="<%= @answer.answer%>" id="answer">
  <input type="submit" value="Update Your Answer">
</form>
