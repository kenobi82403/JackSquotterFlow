<section id="comment_id_<%= comment.id %>"class="comments">
  <p> <span class="comment"> <%= comment.comment %> </span>
      - <a href=""><%= comment.user.username %></a>
      <span class="date"> <%= date_converter(comment.created_at, comment.updated_at, false) %> </span>
  </p>

  <% if login? && authorized?(comment.user.id)%>
  <div class="edit-question">
      <a class="edit" href="/questions/<%= question.id %>/comments/<%= comment.id %>/edit">edit</a>
      <form class="delete" action="/questions/<%= question.id %>/comments/<%= comment.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="delete">
      </form>
  </div>
  <% end %>
</section>
<hr class="after-comment_<%= comment.id %>">
